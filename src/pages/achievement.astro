---
import Layout from "../layouts/BlogPost.astro";
---

<Layout
    title="Achievement"
    description="回首来时路"
    pubDate={new Date("2026-01-01")}
>
    <style>
        .badge-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 20px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }
        .badge-info {
            flex: 1;
            min-width: 200px;
        }
        .badge-title {
            font-weight: bold;
            font-size: 1.25em;
            margin-bottom: 0.5em;
            color: var(--accent);
        }
        .badge-desc {
            color: rgb(var(--gray));
            font-size: 1em;
            line-height: 1.5;
        }
        iframe {
            max-width: 100%;
        }
    </style>

    <!-- Badge Detail -->
    <h2>Digital Badge</h2>
    <h3>Altered Security</h3>

    <div class="badge-item">
        <div class="badge-info">
            <div class="badge-title">First Blood</div>
            <div class="badge-desc">Complete your first ever challenge</div>
        </div>
        <iframe
            src="https://badges.parchment.eu/public/assertions/-owtr5XYTgCHs-W8ZQzlsA?identity__email=randarkjmt%40gmail.com&embedVersion=1&embedWidth=370&embedHeight=167&identity__email=randarkjmt%40gmail.com"
            style="width: 370px; height: 180px; border: 0px;"
            title="Badge: First Blood - Altered Security Red Labs"
        >
        </iframe>
    </div>

    <div class="badge-item">
        <div class="badge-info">
            <div class="badge-title">Discovery and Recon</div>
            <div class="badge-desc">Complete all the challenges in the 'Attack Phase - Discovery and Recon' learning path</div>
        </div>
        <iframe
            src="https://badges.parchment.eu/public/assertions/uoAWQFYiSUeNt8BPYGtDEQ?identity__email=randarkjmt%40gmail.com&embedVersion=1&embedWidth=370&embedHeight=167&identity__email=randarkjmt%40gmail.com"
            style="width: 370px; height: 180px; border: 0px;"
            title="Badge: Discovery and Recon - Altered Security Red Labs"
        >
        </iframe>
    </div>

    <div class="badge-item">
        <div class="badge-info">
            <div class="badge-title">Hot Streak</div>
            <div class="badge-desc">Complete 10 challenges in a single day</div>
        </div>
        <iframe
            src="https://badges.parchment.eu/public/assertions/JDawxWRjSHScZWqz5FW61g?identity__email=randarkjmt%40gmail.com&embedVersion=1&embedWidth=370&embedHeight=167&identity__email=randarkjmt%40gmail.com"
            style="width: 370px; height: 180px; border: 0px;"
            title="Badge: Hot Streak - Altered Security Red Labs"
        >
        </iframe>
    </div>
</Layout>
